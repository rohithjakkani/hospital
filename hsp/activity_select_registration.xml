<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".SelectRegistrationActivity">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/doctor"
        android:layout_gravity="center"
        android:id="@+id/logo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Welcome to this Application"
        android:id="@+id/title"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select One"
        android:id="@+id/title2"
        android:textSize="20sp"
        android:textColor="#000"
        android:gravity="center"/>
    <Button
        android:id="@+id/patient_Registration"
        android:text="Patient Registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:background="@drawable/button_background"
        />
    <Button
        android:id="@+id/Doctor_Registration"
        android:text="Doctor Registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:background="@drawable/button_background"
        />
    <TextView
        android:id="@+id/back"
        android:text="Already Have an Account? Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="#000"
        android:gravity="center"
        android:textSize="17sp" />

